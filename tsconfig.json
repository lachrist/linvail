{
  "compilerOptions": {
    // These options only works on .ts files not .d.ts files
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "declaration": false,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "lib": ["es2024"],
    "target": "es2022",
    "module": "es2022",
    "typeRoots": ["./node_modules/@types"],
    "exactOptionalPropertyTypes": true
  },
  "include": ["./bin/", "./test/", "./lib/", "./lint/"],
  "exclude": ["./lib/**/*.test.inst.mjs"]
}

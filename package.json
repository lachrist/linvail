{
  "name": "linvail",
  "description": "Access Control System",
  "version": "6.0.12",
  "author": {
    "name": "Laurent Christophe",
    "email": "laurent.christophe.terken@gmail.com"
  },
  "files": [
    "lib"
  ],
  "main": "lib/main.js",
  "repository": "lachrist/linvail",
  "scripts": {
    "lint": "npx tsc && npx prettier -c '**/*.(mjs|d.ts)' && npx eslint 'lint/**/*.mjs' 'lib/**/*.mjs' 'lib/**/*.d.ts' 'bin/**/*.mjs'",
    "format": "npx prettier -w '**/*.(mjs|d.ts)'",
    "test:util": "npx c8 -- node lib/util/_.test.mjs",
    "test:region": "npx c8 --include lib/runtime/region -- node --import ./bin/setup.mjs lib/runtime/region/_.test.mjs",
    "test:region:html": "npx c8 --reporter html --include lib/runtime/region -- node --import ./bin/setup.mjs lib/runtime/region/_.test.mjs && open coverage/index.html",
    "test:instrument": "npx c8 --include lib/instrument -- node --import ./bin/setup.mjs lib/instrument/_.test.mjs",
    "test:library": "npx c8 --include lib/runtime/library.mjs -- node --import ./bin/setup.mjs lib/runtime/library.test.mjs",
    "test:instrument:html": "npx c8 --reporter html --include lib/instrument -- node --import ./bin/setup.mjs lib/instrument/_.test.mjs && open coverage/index.html"
  },
  "homepage": "http://github.com/lachrist/linvail",
  "license": "MIT",
  "keywords": [
    "Membrane",
    "Control Access System",
    "Proxy",
    "Aran"
  ],
  "dependencies": {
    "acorn": "^8.14.0",
    "aran": "^5.0.0",
    "astring": "^1.9.0",
    "estree-sentry": "^0.4.1",
    "virtual-proxy": "^0.1.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/source-map": "^0.5.2",
    "c8": "^10.1.3",
    "eslint": "^9.16.0",
    "glob": "^11.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  }
}
